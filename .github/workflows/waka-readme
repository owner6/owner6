name: WakaTime Readme
on:
  schedule:
    - cron: '0 0 * * *'
  workflow_dispatch:
jobs:
  update-readme:
    runs-on: ubuntu-latest
    steps:
      - uses: athul/waka-readme@master
        with:
          WAKATIME_API_KEY: ${{ secrets.WAKATIME_API_KEY }}
          GH_TOKEN: ${{ secrets.GH_TOKEN }}
          SHOW_TITLE: "true"
          TIME_RANGE: "all_time"
          SHOW_TOTAL: "true"
          SHOW_TIME: "true"
          SECTION_NAME: "coding_stats"
          LANG_COUNT: "1000"
          IGNORED_LANGUAGES: "JSON YAML"
          COMMIT_MESSAGE: "Updated coding stats with WakaTime"
